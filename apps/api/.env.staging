# Staging Environment Configuration
NODE_ENV=staging
PORT=3000

# OpenAI API Key (same as legacy)
OPENAI_API_KEY=sk-your-openai-api-key-here

# MongoDB (configure via Railway secret)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/letswriteabook?retryWrites=true&w=majority&appName=<app-name>

# Redis Cloud
REDIS_URL=redis://default:<redis-password>@<redis-host>:<redis-port>

# Socket.IO Gateway Configuration
SOCKET_MAX_CONNECTIONS=500
SOCKET_MAX_CONNECTIONS_PER_ORIGIN=200
SOCKET_MAX_SUBSCRIPTIONS_PER_CLIENT=50
SOCKET_IDLE_TIMEOUT_MS=30000
SOCKET_CLIENT_ORIGIN=http://localhost:5173
API_LOG_LEVELS=log,error,warn

# Performance Settings
MAX_CONCURRENT_JOBS=3
COST_ALERT_THRESHOLD=25.00
ENABLE_COST_TRACKING=true
ENABLE_QUALITY_METRICS=true